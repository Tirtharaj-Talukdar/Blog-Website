    <p><%= homeContent %></p>
    <% postContent.forEach(function(object){ %>
        <h1><%= object.title %></h1>
        <p><%= truncateString(object.content,100) %>
        <a href="/posts/<%= object.title %>"> Read more</a>
        </p>
    <% }); %>

